
[color]
    branch = auto
    diff = auto
    status = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan

  [color]
    ui = true
  [core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
    ci = commit
    st = status
    s  = status -sb
    p  = pull --rebase
    pullff = pull --ff-only
    br = branch
    co = checkout
    m = checkout master
    l  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lg = log -p
    d  = diff
    dc = diff --cached
    aa = add --all
    who = shortlog -s -n
    undocommit = reset --soft HEAD^
    undomerge-or-pull = reset --hard
    amend = commit --amend
    slap = blame -w   #ignore whitespace

    whats-in-the-stash = stash show -p
    sp = stash show -p
    sl = stash list
    apply-stash-to-dirty-working-tree = !git stash show -p | git apply && git stash drop

[merge]
    log = true
